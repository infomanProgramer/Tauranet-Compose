<IfModule mod_rewrite.c>
    RewriteEngine On

    # 1) Rutas API → Laravel
    RewriteCond %{REQUEST_URI} ^/api
    RewriteRule ^ index.php [L]

    # 2) Archivos existentes → servir tal cual
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # 3) Todo lo demás → SPA Vue
    RewriteRule ^ dist/index.html [L]
</IfModule>

